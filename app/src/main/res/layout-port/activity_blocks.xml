<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.BlocksActivity">

    <LinearLayout
        android:id="@+id/blockslinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="25dp">

        <Button
            android:id="@+id/addvisitors_btn"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="25dp"
            android:text="ADD VISITORS"
            android:drawableLeft="@drawable/addvisitors_black"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/visitors_btn"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="25dp"
            android:text="VISITORS"
            android:drawableLeft="@drawable/visitors_black"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/manually_checkout_btn"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="25dp"
            android:text="MANUAL CHECKOUT"
            android:drawableLeft="@drawable/manualcheckout_black"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/checkout_btn"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="25dp"
            android:text="VISITORS CHECKOUT"
            android:drawableLeft="@drawable/visitorscheckout_black"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>